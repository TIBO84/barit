<h1>Bars#show</h1>
<p>Find me in app/views/bars/show.html.erb</p>

    <%= @bar.name %>
    <%= @bar.capacity %>
    <%= @bar.ambiance %>
    <%= @bar.address %>
    <%= @bar.city %>

<%= link_to "Book it", new_bar_reservation_path(@bar) %>

<ul class="list-group">
  <% ratings = [] %>
  <% @bar.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
     <% ratings << review.rating %>
    </li>
  <% end %>
  
  <% if ratings != [] %>
    <%= average = ratings.sum / ratings.size.to_f %>
  <%end%>
  
</ul>

<%= link_to "Back", back_button_path(@search)  %>
