<h1><%= "Bars for #{params[:city].capitalize}"  %></h1>

<% @bars.each do |bar| %>
  <div class="bar-card">
    <%= bar.name %>
    <%= bar.capacity %>
    <%= bar.ambiance %>
    <%= bar.address %>
    <%= bar.city %> |
    <%= @bar.price %>
    <%= @bar.description %>
    <%= link_to "See this bar", bar_path(bar) %>
  </div>
<% end %>

<%= link_to "Back Home", root_path %>
