<h1><%= "Bars for #{params[:city].capitalize}"  %></h1>

<% @bars.each do |bar| %>
  <div class="bar-card">
    <%= bar.name %>
    <%= bar.capacity %>
    <%= bar.ambiance %>
    <%= bar.address %>
    <%= bar.city %> |
    <%= link_to "See this bar", bar_path(bar) %>
  </div>
<% end %>

<div class="container">
  <div id="map"
       style="width: 100%; height: 600px; margin-top: 30px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
