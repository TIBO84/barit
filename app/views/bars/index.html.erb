<div class="container">
    <h1><%= "Bars for #{params[:city].capitalize}"  %></h1>
    <div class="row m-0">
        <% @bars.each do |bar| %>
        <div class="card mr-3" style="width: 20rem;">
           <%= image_tag bar.photo, class: "img" %>
            <div class="card-body">
                <h5 class="card-title"><%= bar.name %></h5>
                <p class="card-text text-truncate"><%= bar.description%></p>
                <%= link_to 'Book It', new_bar_reservation_path(bar), class: "btn btn-primary" %>
            </div>
        </div>
        <% end %>
    </div>
</div>


<div class="container">
    <div id="map" style="width: 100%; height: 600px; margin-top: 30px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
