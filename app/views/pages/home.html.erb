<div style= "width: 100vw; height: 60vh; background-image: url(<%=asset_path "bars_bannier.jpg" %>); background-size: cover; background-position: center" >
  <h1 style= "size: 100rem"> Barit </h1>
  <p> Bests bars in the world </p>
</div>


<div class="d-flex">

  <div class="card" style="width: 50vw; height: 40vh; background-image: url(<%=asset_path "sick_party.jpg" %>); background-size: cover; background-position: center">
    <div class="card-body">
      <h5 class="card-title">Privatize a bar</h5>
      <p class="card-text">Privatize a bar to organize a sick party with all your alcoholics mates.</p>
      <%= form_tag("bars/", method: "get") do %>
      <%= label_tag(:city, "Search a bar in a specific city:") %>
      <%= text_field_tag(:city) %>
      <%= submit_tag("Search") %>
      <% end %>
    </div>
  </div>

  <div class="card" style="width: 50vw; height: 40vh; background-image: url(<%=asset_path "rent_your_bar.jpg" %>); background-size: cover; background-position: center">
      <div class="card-body">
        <h5 class="card-title">Rent your bar</h5>
        <p class="card-text">Rent your bar by the night for a price that doubles your best sales on the best day of the year.</p>
        <%= link_to 'Propose a bar', new_bar_path, class:"btn btn-primary" %>
      </div>
  </div>

</div>

